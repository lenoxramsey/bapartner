<div class="container">
  <div class="login-container">
      <div class=row>
          <div class=col-md-12>
            <div class="text-center m-b-md animated-panel bounceIn headlogo" style="animation-delay: 0.1s;">
                <%= image_tag("logo.png", size: "64") %>
            </div>            
              <div class="hpanel animated-panel zoomIn" style="animation-delay: 0.1s;">
                  <div class="panel-body no-shadow">
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name, class: "form-group")) do |f| %>
                        <%= devise_error_messages! %>
                        <div class="field">
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "enter email", class: "form-control" %>
                        </div>
                        
                        <div class="field">
                          <%= f.password_field :password, autocomplete: "new-password", placeholder: "enter password (6 or more characters)", class: "form-control" %>
                        </div>
                      
                        <div class="field">
                          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm password", class: "form-control" %>
                        </div>
                      
                        <div class="actions">
                          <%= f.submit "Become a Partner", class: "btn btn-bablue btn-block" %>
                        </div>
                      <% end %>
                      
                      <%= render "devise/shared/links" %>
                  </div>
              </div>
          </div>
      </div>
    </div>
  </div>
</div>
