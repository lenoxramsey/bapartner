<div class="container">
  <div class="login-container">
      <div class=row>
          <div class=col-md-12>
            <div class="text-center m-b-md animated-panel bounceIn headlogo" style="animation-delay: 0.1s;">
                <%= image_tag("logo.png", size: "64") %>
            </div>            
              <div class="hpanel animated-panel zoomIn" style="animation-delay: 0.1s;">
                  <div class="panel-body no-shadow">
                      <%= form_for(resource, as: resource_name, url: session_path(resource_name, class: "form-group")) do |f| %>
                        <div class="field">
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email address", class: "form-control" %>
                        </div>
                      
                        <div class="field">
                          <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control" %>
                        </div>
                      
                        <% if devise_mapping.rememberable? -%>
                          <div class="field">
                            <%= f.check_box :remember_me %>
                            <%= f.label :remember_me %>
                          </div>
                        <% end -%>
                      
                        <div class="actions">
                          <%= f.submit "Log in", class: "btn btn-bablue btn-block" %>
                        </div>
                      <% end %>
                      
                      <%= render "devise/shared/links" %>
                  </div>
              </div>
          </div>
      </div>
    </div>
  </div>
</div>